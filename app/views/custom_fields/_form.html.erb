<%= form_for(@custom_field) do |f| %>
    <% if @custom_field.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@custom_field.errors.count, "error") %> prohibited this custom_field from being
            saved:</h2>
          <ul>
            <% @custom_field.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <label for="title">Name</label>
    <div class="input-group">
      <%= f.text_field :name, class: 'form-control', id: 'title' %>
    </div>
    <div class="text-center">
      <%= link_to '<i class="icon-arrow-left13 position-left"></i> Back'.html_safe, email_settings_email_templates_path, class: "btn btn-danger" %>
      <button class="btn btn-primary" type="submit"><i class="icon-checkmark3 position-left"></i>Save</button>
    </div>

<% end %>
