<table class="table table-bordered table-striped" style="margin-bottom: 30px">
  <thead>
  <tr class="bg-blue">
    <th>Title</th>
    <th>Subject</th>
    <!--<th>Body</th>-->
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% templates.each do |email_template| %>
      <tr>
        <td><%= email_template.title %></td>
        <td><%= email_template.subject %></td>
        <td><%= link_to '<i class="glyphicon glyphicon-envelope">'.html_safe, test_email_template_path(email_template),remote: true, class: "btn btn-success" %></td>
        <td><%= link_to '<i class="icon-pencil4">'.html_safe, edit_email_template_path(email_template), class: "btn btn-default" %></td>
        <td><%= link_to '<i class="icon-bin">'.html_safe, email_template, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-float' %></td>
      </tr>
  <% end %>
  <% if templates.blank?  %>
  <tr><td colspan="5">No Campaigns Found</td></tr>
  <% end %>
  </tbody>
</table>