<div id="header-mapper" style="margin-top: 30px">
  <%= form_tag custom_export_subscribers_subscriber_group_path(@subscriber_group),remote: true, class: 'form-horizontal', multipart: true do |form| %>
      <div class="row" style="margin-bottom: 30px">
        <%= file_field_tag :upload_file, class: "form-control", required: true %>
      </div>
      <%= hidden_field_tag "map_headers",true %>
  <% end %>
</div>

<script>
    $(function () {
        $('#upload_file').on('change',function () {
            $('.form-horizontal').submit();
        });
    });
</script>