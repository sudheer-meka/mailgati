<script>
    $(function () {
        last_query = '';
        var lastRequest;
        $("#search").keyup(function () {
            //searchTable($(this).val(),"name","table");
            if (this.value != last_query) {
                if (this.timer) {
                    clearTimeout(this.timer);
                }
                this.timer = setTimeout(function () {
                    var query = $("#search").val();
//                    if (query == '' || query == null) {
//                        $('#com-pagination').show();
//                    }
//                    else {
//                        $('#com-pagination').hide();
//                    }

                    last_query = query;

//                    Aborts last sent ajax to optimize the search
                    if (!(lastRequest === undefined))
                        lastRequest.abort();

                    lastRequest = $.get("<%= search_subscriber_group_path(@subscriber_group) %>", {
                        query: query,
                        page: "<%= params[:page] %>"
                    }, function () {
                    });
                }, 500);
            }
        });
        $(document).on("click", ".pagination a", function () {
            var page_no = $(this).attr('href').split('page=')[1];
            alert(page_no);
            $(this).html('Page is loading...');
            var query = $("#search").val();
            $.get("<%= search_subscriber_group_path(@subscriber_group) %>", {
                query: query,
                page: page_no
            }, null, 'script');
            return false;
        });
    });
</script>